<body class="bg-bunk loaded">

    <!--  Preloader Start -->
    <div class="loader-wrapper">
        <div class="loader"></div>
        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>
    </div>
    <!--  Preloader End -->
    <!-- Breadcrumb Section Start -->
    <div class="breadcrumb-wrap bg-mild position-relative">
        <img src="~/assets/img/breadcrumb/br-shape-1.webp" alt="Image" class="br-shape-one position-absolute sm-none bounce">
        <img src="~/assets/img/breadcrumb/br-shape-2.webp" alt="Image" class="br-shape-two position-absolute sm-none moveHorizontal">
        <img src="~/assets/img/breadcrumb/br-shape-3.webp" alt="Image" class="br-shape-three position-absolute top-0 end-0 h-100">
        <div class="container text-center ps-xxl-4">
            <h2 class="br-title text-white">جزئیات غذا</h2>
            <ul class="br-menu list-unstyle">
                <li class="fs-xxl-20">رستوران ایتار</li>
                <li class="fs-xxl-20"><a asp-action="Index">لیست غذا ها</a></li>
            </ul>
        </div>
    </div>
    <!-- Breadcrumb Section End -->
    <!-- جزئیات فروشگاه section Start -->
    <div class="shop-wrap position-relative index-1">
        @if (Model.IsSuccess)
        {
            @* <img src="~/assets/img/shape-17.webp" alt="Image" class="shop-section-shape position-absolute end-0 sm-none bounce"> *@
            <div class="container ptb-130">
                <div class="row align-items-center pb-100">
                    @* <div class="col-lg-6">
                <div class="single-shop-img round-10">
                <img src="~/assets/img/shop/single-shop.webp" alt="Image" class="round-10">
                </div>
                </div> *@
                    <div class="col-xxl-5 col-lg-6 pe-xxl-5">
                        <div class="shop-details-wrap">
                            <h2 class="fs-32 text-optional">@Model.Data.Name</h2>


                            <h4 class="price-tag fs-24 f-primary">@Model.Data.Price.ToString("n0") تومان</h4>
                            <p class="fw-bold">@Model.Data.Description</p>

                            <ul class="product-brief list-unstyle mb-30">
                                <li class="fw-bold"><span class="text-white fw-bold me-1">دسته بندی:</span>@Model.Data.Category</li>
                            </ul>

                        </div>
                    </div>
                </div>

                <button class="btn btn-primary">
                    <a asp-action="Update" asp-route-id="@Model.Data.Id" style="color: white">
                        ویرایش
                    </a>
                </button>
                <button class="btn btn-danger">
                    <a asp-action="Remove" asp-route-id="@Model.Data.Id" style="color: white">
                        حذف
                    </a>
                </button>
            </div>
        }
        else
        {
            <h3 class="text-danger">
                @Model.Message
            </h3>
        }

    </div>
    <!-- جزئیات فروشگاه section End -->
    <!-- Back to Top -->
    <button type="button" id="backtotop" class="position-fixed text-center border-0 p-0" style="opacity: 0;">
        <i class="ri-arrow-up-line"></i>
    </button>

